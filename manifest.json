{
    "manifest_version": 2,
    "name" : "Better Magister",
    "description": "Magister but just better. By Tekar Inc.",
    "version": "0.7.3",
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
      },
    "icons": {
        "16": "/icons/16.png",
        "48": "/icons/48.png",
        "128": "/icons/128.png"
    },
    "page_action": {
        "default_icon": {
            "16": "/icons/16.png",
            "48": "/icons/48.png",
            "128": "/icons/128.png"
        }
    },
    "content_scripts": [{
        "matches": ["https://*.magister.net/*"],
        "js": ["main.js"],
        "css": ["main.css"]
    }, {
        "matches": ["https://*.magister.net/error.html?*"],
        "css": ["error.css"],
        "js": ["error.js"]
    }, {
        "matches": ["https://accounts.magister.net/account/login?*"],
        "css": ["account.css"],
        "js": ["account.js"]
    }, {
        "matches": ["https://*.magister.net/magister-berichten/*"],
        "css": ["berichten.css"],
        "all_frames": true
    }],
    "permissions": [
        "storage",
        "tabs",
        "https://*.magister.net/*"
      ],
    "background": {
        "scripts": [
            "bg.js"
        ]
    }
}
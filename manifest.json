{
    "manifest_version": 3,
    "name" : "Better Magister",
    "description": "Magister but just better.",
    "version": "0.10.5",
    "options_ui": {
        "page": "html/options.html",
        "open_in_tab": true
      },
    "icons": {
        "16": "/icons/16.png",
        "48": "/icons/48.png",
        "128": "/icons/128.png"
    },
    "action": {
        "default_popup": "html/popupOptions.html",
        "default_icon": {
            "16": "/icons/16.png",
            "48": "/icons/48.png",
            "128": "/icons/128.png"
        },
        "default_title": "Instellingen openen"
    },
    "content_scripts": [{
        "matches": ["https://*.magister.net/*"],
        "js": ["js/main.js"],
        "css": ["css/main.css"]
    }, {
        "matches": ["https://*.magister.net/error.html?*"],
        "css": ["css/error.css"],
        "js": ["js/error.js"]
    }, {
        "matches": ["https://accounts.magister.net/account/login?*"],
        "css": ["css/account.css"],
        "js": ["js/account.js"]
    }, {
        "matches": ["https://*.magister.net/magister-berichten/*"],
        "css": ["css/berichten.css"],
        "js": ["js/berichten.js"],
        "all_frames": true
    }],
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "webNavigation",
        "scripting"
    ],
    "host_permissions": [
        "*://*.magister.net/*"
    ],
    "background": {
        "service_worker": "js/service_worker.js"
    }
}
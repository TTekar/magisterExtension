{
    "manifest_version": 3,
    "name" : "Better Magister",
    "description": "Magister but just better.",
    "version": "0.9.1",
    "options_ui": {
        "page": "html/options.html",
        "open_in_tab": true
      },
    "icons": {
        "16": "/icons/16.png",
        "48": "/icons/48.png",
        "128": "/icons/128.png"
    },
    "page_action": {
        "default_icon": {
            "16": "/icons/16.png",
            "48": "/icons/48.png",
            "128": "/icons/128.png"
        }
    },
    "content_scripts": [{
        "matches": ["https://*.magister.net/*"],
        "js": ["js/main.js"],
        "css": ["css/main.css"]
    }, {
        "matches": ["https://*.magister.net/error.html?*"],
        "css": ["css/error.css"],
        "js": ["js/error.js"]
    }, {
        "matches": ["https://accounts.magister.net/account/login?*"],
        "css": ["css/account.css"],
        "js": ["js/account.js"]
    }, {
        "matches": ["https://*.magister.net/magister-berichten/*"],
        "css": ["css/berichten.css"],
        "js": ["js/berichten.js"],
        "all_frames": true
    }],
    "permissions": [
        "storage",
        "tabs",
        "https://*.magister.net/*"
      ],
    "background": {
        "scripts": [
            "js/bg.js"
        ]
    }
}